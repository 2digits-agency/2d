{
  "name": "@2digits/2d",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "find . -name node_modules -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
    "dev": "turbo run dev",
    "format": "bash -c 'prettier \"**/*\" --ignore-unknown --ignore-path <(cat .gitignore .prettierignore) --check'",
    "format:fix": "bash -c 'prettier \"**/*\" --ignore-unknown --ignore-path <(cat .gitignore .prettierignore) --write'",
    "lint": "turbo run lint && manypkg check",
    "lint:fix": "turbo run lint -- --fix && manypkg fix",
    "types": "turbo run types",
    "publish": "changeset publish",
    "release": "turbo run build && changeset publish"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.3.0",
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "eslintConfig": {
    "extends": "@2digits",
    "rules": {
      "unicorn/prefer-ternary": [
        "error",
        "only-single-line"
      ]
    }
  },
  "prettier": "@2digits/prettier-config",
  "dependencies": {
    "@2digits/eslint-config": "^0.2.0",
    "@2digits/prettier-config": "^0.2.0",
    "@2digits/tsconfig": "^0.1.0",
    "@changesets/cli": "^2.26.1",
    "@manypkg/cli": "^0.20.0",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node": "^18.15.11",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  }
}
